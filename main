  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("hrForm");
      const inputs = Array.from(form.querySelectorAll("input, select, textarea"));
      const submitBtn = document.getElementById("submitBtn");
      const popup = document.getElementById("successPopup");
      const hoten = document.getElementById("hoten");
      const hodem = document.getElementById("hodem");
      const ten = document.getElementById("ten");

      // 1) Enter → nhảy field kế tiếp, field cuối → focus nút Gửi
      inputs.forEach((el, idx) => {
        el.addEventListener("keydown", (e) => {
          if (e.key === "Enter") {
            e.preventDefault();
            const next = inputs[idx + 1];
            if (next) {
              next.focus();
            } else {
              submitBtn.focus();
            }
          }
        });
      });

      // 2) Tự động tách Họ / Tên từ "Họ và tên"
      hoten.addEventListener("blur", () => {
        const full = hoten.value.trim().replace(/\s+/g, " ");
        if (!full) {
          hodem.value = "";
          ten.value = "";
          return;
        }
        const parts = full.split(" ");
        if (parts.length === 1) {
          hodem.value = "";
          ten.value = parts[0];
        } else {
          ten.value = parts[parts.length - 1];
          hodem.value = parts.slice(0, -1).join(" ");
        }
      });

      // 3) Chuẩn bị hàm CHECK TRÙNG từ Google Sheet (placeholder)
      async function checkDuplicateFromSheet() {
        const manv = document.getElementById("manv").value.trim();
        const fullName = document.getElementById("hoten").value.trim();
        const soCCCD = document.getElementById("cccd").value.trim();
        const ngaySinh = document.getElementById("ngaysinh").value;
        const ngayCap = document.getElementById("ngaycap").value;

        if (!manv && !fullName && !soCCCD) return;

        // TODO:
        // Ở đây bạn sẽ gọi API Google Sheet / Apps Script để kiểm tra trùng:
        // - Mã NV
        // - Họ và tên
        // - CCCD
        // - Ngày sinh
        // - Ngày cấp
        //
        // Ví dụ nếu dùng Apps Script WebApp:
        //
        // const res = await fetch('YOUR_WEBAPP_URL?manv=' + encodeURIComponent(manv) + ...);
        // const data = await res.json();
        // if (data.duplicate) { ... hiển thị cảnh báo ... }

        console.log("TODO: Gọi API kiểm tra trùng với Google Sheet tại đây");
      }

      // Gọi check trùng khi blur các trường chính
      ["manv", "hoten", "cccd", "ngaysinh", "ngaycap"].forEach(id => {
        const el = document.getElementById(id);
        el.addEventListener("blur", checkDuplicateFromSheet);
      });

      // 4) Submit form: validate + spinner + popup đẹp
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        // Xoá lỗi cũ
        form.querySelectorAll(".tooltip").forEach(t => t.remove());
        inputs.forEach(el => {
          el.classList.remove("border-red", "border-green");
        });

        let firstError = null;
        let valid = true;

        inputs.forEach(el => {
          if (el.hasAttribute("required") && !el.value.trim()) {
            valid = false;
            el.classList.add("border-red");

            const tooltip = document.createElement("div");
            tooltip.className = "tooltip";
            tooltip.innerText = "Không được để trống";
            el.parentElement.appendChild(tooltip);

            if (!firstError) firstError = el;
          } else if (el.value.trim()) {
            el.classList.add("border-green");
          }
        });

        if (!valid) {
          firstError.scrollIntoView({ behavior: "smooth", block: "center" });
          firstError.focus();
          return;
        }

        // TODO: Gửi dữ liệu lên Google Sheet tại đây
        // Bạn có thể:
        // - Gọi Apps Script WebApp
        // - Hoặc Google Sheets API backend
        // Hiện tại demo chỉ giả lập delay 1.2s.

        const oldHTML = submitBtn.innerHTML;
        submitBtn.innerHTML = '<span class="spinner"></span>';
        submitBtn.disabled = true;

        await new Promise(r => setTimeout(r, 1200));

        submitBtn.innerHTML = oldHTML;
        submitBtn.disabled = false;

        // Hiện popup
        popup.style.display = "flex";
        setTimeout(() => {
          popup.style.display = "none";
        }, 1500);

        form.reset();
        inputs.forEach(el => el.classList.remove("border-green"));
      });
    });
  </script>
</body>
</html>
